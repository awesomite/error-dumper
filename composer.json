{
    "name": "awesomite/error-dumper",
    "description": "Pretty preview of errors and exceptions",
    "prefer-stable": true,
    "require": {
        "php": "^5.3 || ^7.0",
        "awesomite/stack-trace": "^1.3.0",
        "awesomite/var-dumper": "^1.0.0",
        "symfony/console": "^2.7 || ^3.0 || ^4.0",
        "twig/twig": "^1.12.0-stable || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36",
        "silex/silex": "^1.3.5",
        "symfony/twig-bridge": "^2.0.5",
        "symfony/filesystem": "^2.8.16",
        "symfony/finder": "^2.8.16",
        "symfony/polyfill-php54": "^1.3",
        "sebastian/comparator": ">=1.2.3",
        "awesomite/phpunit-4.8-fixer": "^1.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Bart≈Çomiej Krukowski",
            "email": "bartlomiej@krukowski.me"
        }
    ],
    "autoload": {
        "psr-4": {
            "Awesomite\\ErrorDumper\\": "src/"
        }
    },
    "autoload-dev": {
        "files": ["tests/polyfill.php"],
        "psr-4": {
            "Awesomite\\ErrorDumper\\": "tests/",
            "Awesomite\\ErrorDumper\\Optimizer\\": "optimizer/"
        }
    },
    "keywords": ["debug", "debug_backtrace", "exception", "error"]
}
