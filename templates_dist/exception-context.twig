{% if exception.getContext|length > 0 %}<h2>Context</h2><div class="panel-group"><div class="panel panel-default">{% for var in exception.getContext %}{% set showFull = loop.index0 < 1 %}{% set varId = 'context-variable-' ~ loop.index %}<div class="panel-heading"><a data-toggle="collapse" data-target="#{{ varId }}" class="var-header {{ showFull ? '' : 'collapsed' }}">
                        ${{ var.getName() }}</a></div><div id="{{ varId }}" class="panel-collapse collapse {{ showFull ? 'in' }}"><div class="panel-body"><pre class="max-height">{{ var.dumpAsString() }}</pre></div></div>{% endfor %}</div></div>{% endif %}
